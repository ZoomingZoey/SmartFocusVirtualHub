{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "backdated_publish_date": {
      "type": "date"
    },
    "thumbnail_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "header_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "podcast_audio": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "audios"
      ]
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "article-contents.article-image"
      ],
      "required": true
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "content_type": {
      "type": "string",
      "default": "podcast",
      "required": true
    },
    "clusters": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::cluster.cluster",
      "inversedBy": "podcasts"
    }
  }
}
